<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"

        >

        <TextView
            android:id="@+id/deliverynumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="@string/text_display_item_enquiry_key"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/deliverynumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="@string/text_display_item_enquiry_value"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="45dp"
            android:background="@color/box_stroke" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
