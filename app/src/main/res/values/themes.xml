<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JLP_Layouts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item><!--teal_200-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="fullscreen"  parent="Theme.JLP_Layouts">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_views">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_input_edittext">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button">
        <item name="android:padding">@dimen/margin_padding_xtiny</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/material_text_button</item>
    </style>
    <style name="Theme.JLP_Layouts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.JLP_Layouts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.JLP_Layouts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>